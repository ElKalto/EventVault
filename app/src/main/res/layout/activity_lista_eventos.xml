<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fiestaocho"
    tools:context=".vista.ListaEventos">

    <TextView
        android:id="@+id/txtviewTituloLista"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:text="Eventos Disponibles"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp" />

    <Spinner
        android:id="@+id/spinnerOrden"
        android:layout_width="174dp"
        android:layout_height="72dp"
        android:layout_below="@id/txtviewTituloLista"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="235dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEventos"
        android:layout_width="wrap_content"
        android:layout_height="589dp"
        android:layout_below="@id/spinnerOrden"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="9dp"
        android:background="#88A686E1"
        android:textAlignment="center" />

</RelativeLayout>
