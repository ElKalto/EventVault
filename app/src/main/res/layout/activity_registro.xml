<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fiestadiez"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".vista.Registro">

        <!-- ImageView como fondo -->

        <EditText
            android:id="@+id/edTextNomAsoReg"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Nombre de asociacion o emprea"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtViewNombAsoc" />

        <TextView
            android:id="@+id/txtViewAsociacion"
            android:layout_width="275dp"
            android:layout_height="51dp"
            android:layout_marginTop="12dp"
            android:text="多Pertenece a una asociacion?"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="Repetir contrase単a"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edTextPassRepReg" />

        <EditText
            android:id="@+id/edTextMailReg"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtViewReg1" />

        <TextView
            android:id="@+id/txtViewNombAsoc"
            android:layout_width="270dp"
            android:layout_height="58dp"
            android:layout_marginTop="12dp"
            android:text="Indique el nombre de su asociacion o empresa"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtViewAsociacion" />

        <CheckBox
            android:id="@+id/checkBoxAsoc"
            android:layout_width="74dp"
            android:layout_height="60dp"
            android:text="Si"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.384" />

        <EditText
            android:id="@+id/edTextPassRepReg"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:hint="Contrase単a"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edTextMailReg" />

        <Button
            android:id="@+id/btnAcpReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Aceptar"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtViewReg1"
            android:layout_width="206dp"
            android:layout_height="43dp"
            android:layout_marginTop="16dp"
            android:text="Registro"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewAcepPoliticaPriv"
            android:layout_width="237dp"
            android:layout_height="41dp"
            android:layout_marginStart="68dp"
            android:text="多Acepta los terminos de uso?"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.878" />

        <CheckBox
            android:id="@+id/checkBoxPolitica"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:text="Si"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.923"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.875" />

        <TextView
            android:id="@+id/textViewPoliticaPriv"
            android:layout_width="263dp"
            android:layout_height="47dp"
            android:layout_marginTop="8dp"
            android:text="Se recomienda leer la Politica de Privacidad antes de registrarse"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtViewReg1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
