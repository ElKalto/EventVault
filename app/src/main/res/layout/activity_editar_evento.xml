<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/fiestacuatro"
    tools:context=".vista.EditarEvento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewCreaEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Evento"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="34sp" />

        <Spinner
            android:id="@+id/spinnerEventos"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="8dp"
            android:background="#8F778FE4" />

        <EditText
            android:id="@+id/edtTextNombreEvento"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#8F778FE4"
            android:ems="10"
            android:hint="Nombre del evento"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/edtTextDescripcion"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="#8F778FE4"
            android:ems="10"
            android:hint="Descripción"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <TextView
            android:id="@+id/txtViewFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#8F778FE4"
            android:text="Seleccione la fecha de evento"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="20sp" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8F778FE4"
            android:selectedWeekBackgroundColor="#FFFFFF"
            android:unfocusedMonthDateColor="#FFFFFF"
            android:weekNumberColor="#FFFFFF"
            android:weekSeparatorLineColor="#FFFFFF" />

        <TextView
            android:id="@+id/txtViewHoraEvento"
            android:layout_width="378dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#8F778FE4"
            android:text="Seleccione la hora del evento"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="20sp" />

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtTextUbicacion"
            android:layout_width="382dp"
            android:layout_height="53dp"
            android:background="#8F778FE4"
            android:ems="10"
            android:hint="Ubicación del evento"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnAceptarEditarEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aceptar" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
